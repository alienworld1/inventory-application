extends layout 

block content 
  h1= title

  form(method="post")
    section 
      label(for='name') Name:
      input#name(type="text" placeholder='Fruits, Dairy Products etc.' name='name' required value=(undefined===category ? '' : category.name)) 
      label(for='description') Description: 
      input#description(type='text' name='description' required minlength=5 value=(undefined===category ? '' : category.description))
    if isUpdate 
      section 
        label(for='password') Password:
        input#password(type='password' name='password' required)
    button(type="submit") Submit

  if errors
    ul 
      for error in errors 
        li!= error.msg